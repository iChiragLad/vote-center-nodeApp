<!DOCTYPE html>
<html lang="en">

<% var title = 'VoteCenter - Login' %>
<% include ../partials/Head %>

<body>
<% var indexTab = ""%>
<% var loginTab = "active"%>
<% var signupTab = ""%>
<% include ../partials/outerNav %>

<% include ../partials/outerJumbotron %>

<div class="container-fluid">
    <!-- Example row of columns -->
    <div class="row text-center">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <h2 class="form-signin-heading">Login to Your Account</h2><br>
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <br>
            <!--<form action="/users/login" method="post">
                <input placeholder="email" type="email" name="email">
                <input placeholder="password" type="password" name="password">
                <input type="submit" value="Login">
            </form>-->
            <form class="form-signin" action="/users/login" method="post">
                <div class="text-left">
                    <label for="inputEmail">Email address</label>
                </div>
                <input name="email" type="email" id="inputEmail" class="form-control" placeholder="peter_pan@rocketscience.com" required autofocus><br>
                <div class="text-left">
                    <label for="inputPassword">Password</label>
                </div>
                <input name="password" type="password" id="inputPassword" class="form-control" required>
                <br><br>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
                <h6 class="text-center"><span class="label label-default">-- or --</span></h6>
                <a name="facebookLogin" class="btn btn-block btn-lg" href="https://vote-center.herokuapp.com/users/facebook" role="button"><span><img src="images/facebook.png"></span></a>
            </form>
        </div>
    </div>
</div>
<br>
<br>

<% include ../partials/footer %>

</body>
</html>