<!DOCTYPE html>
<html lang="en">

<% var title = 'VoteCenter - All polls' %>
<% include ../partials/Head %>

<body>
<% var usernm = username %>
<% include ../partials/innerNav %>

<% include ../partials/innerJumbotron %>

<div class="container-fluid">
    <!-- Example row of columns -->
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <ul id="ulParent" class="list-group">
                <% var c = 1 %>
                <% questions.forEach(function(question){ %>
                <li class="list-group-item">
                    <h4><%= question %></h4>
                    <% var resultAddress = encodeURI('http://localhost:3000/share/' + username + '/poll/' + question) %>
                    <% var deleteAddress = encodeURI('http://localhost:3000/users/deletepoll/' + username + '/' + question ) %>
                    <% var resultId = 'showResult' + c %>
                    <% var deleteId = 'deletePoll' + c %>
                    <a id= <%= resultId %> name="result" class="btn btn-block btn-sm" style="background-color: #3e8f3e" href= <%= resultAddress %>  role="button">Result</a>
                    <a id= <%= deleteId %> name="delete" class="btn btn-block btn-sm" style="background-color: #843534" href= <%= deleteAddress %>  role="button">Delete</a>
                </li>
                <br>
                <% c += 1 %>
                <% }) %>
            </ul>
        </div>
    </div>
</div>
<br>
<br>
<% include ../partials/footer %>
<script src="/javascripts/general.js" rel="script"></script>
</body>
</html>