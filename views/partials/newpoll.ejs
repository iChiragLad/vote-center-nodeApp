<div class="container-fluid">
    <!-- Example row of columns -->
    <div class="row text-center">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <form action="polls" method="post">
                <h2>New Poll</h2><br>
                <div class="text-left">
                    <label>Name your poll</label>
                </div>
                <input type="text" id="inputQuestion" class="form-control" placeholder="Which is your favourite Table Tennis player?" required autofocus><br>
                <div class="text-left">
                    <label>Options</label>
                </div>
                <input type="text" id="inputOption1" class="form-control" placeholder="Ma Long" required>
                <input type="text" id="inputOption2" class="form-control" placeholder="Xu Xin" required><br>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>
